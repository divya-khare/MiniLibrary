<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activity.SetNewPassword"
    android:background="@drawable/bg_gradient">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtNewCred"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/new_ncredentials"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:fontFamily="@font/black_ops_one"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="45sp" />
        <TextView
            android:id="@+id/txtEnterdetailsNC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:text="@string/set_pass_your_number_has_been_verified"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/radley"
            android:textSize="25sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/etNewPass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:hint="@string/set_pass_new_password"
            android:maxLength="12"
            android:textColor="#000000"
            android:textAlignment="textStart"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/radley"
            android:drawablePadding="5dp"
            android:background="@drawable/bg_item"
            android:drawableStart="@drawable/ic_password"
            android:padding="7dp" />
        <EditText
            android:id="@+id/etConfirmPass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:hint="@string/set_pass_confirm_password"
            android:textColor="#000000"
            android:layout_marginLeft="15dp"
            android:maxLength="12"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:textAlignment="textStart"
            android:textSize="15sp"
            android:fontFamily="@font/radley"
            android:drawablePadding="5dp"
            android:background="@drawable/bg_item"
            android:drawableStart="@drawable/ic_password"
            android:padding="7dp" />
        <Button
            android:id="@+id/btnDone"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_done"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:background="@drawable/bg_button"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="20dp" />
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp">
        </ProgressBar>
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif"
            android:layout_width="107dp"
            android:layout_height="127dp"
            android:layout_gravity="end"
            android:layout_marginTop="65dp"
            android:src="@drawable/book_gif" />
    </LinearLayout>
</ScrollView>


